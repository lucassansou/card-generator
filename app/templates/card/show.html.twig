{% extends 'base.html.twig' %}

{% block title %}Hello CardController!{% endblock %}


{% block body %}

    <div class="card-container {{ card.cardColor.color | lower }}" id="card-body">

        <div class="card-header">
           <div class="card-name">
                <h3>{{ card.name }}</h3>
           </div>
           <div class="card-cost">
               <h3>{{ card.manaCost }}</h3>
           </div>
        </div>

        <div class="card-container" style="background-image: url({{ card.image }})" id="card-image">
        </div>

        <div class="card-type">
            <h3>{{ card.type }}</h3>
        </div>

        <div class="card-container" id="card-description">
            <p>{{ card.description }}</p>
        </div>

        <div class="card-stats">
            <p>{{ card.power }}/{{ card.toughness }}</p>
        </div>
    </div>

{% endblock %}