{% extends 'base.html.twig' %}

{% block title %}Hello CardController!{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="{{ asset('style/card/style.css') }}" media="screen" />
{% endblock %}

{% block body %}

    {{ form_start(form) }}

    <div class="m-auto col-6">

        <div class="my-custom-class-for-errors mt-5">
            <h1>Cadastre as cores do seu deck</h1>
        </div>

        <div class="form-group mt-2">
            {{ form_label(form.name) }}
            {{ form_widget(form.name) }}
        </div>

        <div class="form-group mt-2">
            {{ form_label(form.mana_cost) }}
            {{ form_widget(form.mana_cost) }}
        </div>

        <div class="form-group mt-2">
            {{ form_label(form.type) }}
            {{ form_widget(form.type) }}
        </div>

        <div class="form-group mt-2">
            {{ form_label(form.description) }}
            {{ form_widget(form.description) }}
        </div>

        <div class="form-group mt-2">
            {{ form_label(form.power) }}
            {{ form_widget(form.power) }}
        </div>

        <div class="form-group mt-2">
            {{ form_label(form.toughness) }}
            {{ form_widget(form.toughness) }}
        </div>

        <div class="form-group mt-2">
            {{ form_label(form.image) }}
            {{ form_widget(form.image) }}
        </div>

        <div class="form-group mt-2 mb-4">
            {{ form_label(form.card_color) }}
            {{ form_widget(form.card_color) }}
        </div>

        <div class="form-group mt-2">
            {{ form_widget(form.submit) }}
        </div>

    </div>

    {{ form_end(form) }}

{% endblock %}

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
{% endblock %}
